<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/item_listname"
              app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="30dp"
              app:layout_constraintTop_toBottomOf="parent" app:layout_constraintBottom_toTopOf="parent"/>

    <Button android:layout_width="70dp" android:layout_height="40dp"
            android:id="@+id/delete" android:text="删除" android:background="@null"
            android:textColor="#000000"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="parent" app:layout_constraintBottom_toTopOf="parent"/>
    <View android:layout_width="match_parent" android:layout_height="1px"
          android:background="@color/colorDividerGray"
          app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1px"/>
</androidx.constraintlayout.widget.ConstraintLayout>